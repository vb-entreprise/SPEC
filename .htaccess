# Enable rewrite engine
RewriteEngine On

# Set base directory
RewriteBase /

# Set correct MIME types
AddType application/javascript .js
AddType text/css .css
AddType application/json .json

# Handle _next directory requests
RewriteRule ^_next/(.*) dist/_next/$1 [L]

# If the request is for an existing file or directory in dist, serve it directly
RewriteCond %{DOCUMENT_ROOT}/dist%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}/dist%{REQUEST_URI} -d
RewriteRule ^(.*)$ dist/$1 [L]

# Try serving index.html from the exact path
RewriteCond %{DOCUMENT_ROOT}/dist%{REQUEST_URI}/index.html -f
RewriteRule ^(.*)$ dist/$1/index.html [L]

# Try serving .html version of the path
RewriteCond %{DOCUMENT_ROOT}/dist%{REQUEST_URI}.html -f
RewriteRule ^(.*)$ dist/$1.html [L]

# If nothing else matches and it's not a file/directory, try index.html in that directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/dist/$1/index.html -f
RewriteRule ^(.*?)/?$ dist/$1/index.html [L]

# Finally, try the homepage for any unmatched requests
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ dist/index.html [L]

